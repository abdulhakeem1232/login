              <div class="card-body">
                <h5 class="card-title  text-center"><%= cardContents[i].title %></h5>
                <p class="card-text " style="text-align: justify;"><%= cardContents[i].text %></p>
              </div>
            </div>
          </div>
          
          <% if (i % 4 === 3 || i === cardContents.length - 1) { %>
            </div>
          <% } %>
        <% } %>
      </div>
    
